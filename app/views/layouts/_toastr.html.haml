- if flash.any?
  .toast#toast.align-items-center.text-white.bg-primary.border-0.show.mb-3{"aria-atomic" => "true", "aria-live" => "assertive", role: "alert"}
    .d-flex{:class => "#{flash[:notice].present? ? 'bg-colored' : 'bg-warning'}"}
      .toast-body
        = flash[:notice]
        = flash[:error]
      %button.btn-close.btn-close-white.me-2.m-auto{"aria-label" => "Close", "data-bs-dismiss" => "toast", type: "button", onclick: "remove(this)"}
:javascript
  function remove() {
    var element = document.getElementById("toast");
    element.remove();
  }