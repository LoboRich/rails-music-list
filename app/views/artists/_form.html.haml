= form_with(model: @artist, local: true) do |form|
  - if @artist.errors.any?
    #error_explanation
      %p
        = pluralize(@artist.errors.count, "error")
        prohibited this artist from being saved:
      %ul
        - @artist.errors.full_messages.each do |message|
          %li= message

  .row
    .form-group.col-12.pt-2.mb-0
      .form-row
        .col-md-6.pt-3
          .field
            = form.label :name, :class => "control-label"
            = form.text_field :name, class: 'form-control', required:  true
        .col-md-6.pt-3
          .field
            = form.label :permalink, :class => "control-label"
            = form.text_field :permalink, class: 'form-control', required:  true
        .col-md-6.pt-3
          .field
            = form.label :bio, :class => "control-label"
            = form.text_area :bio, class: 'form-control', required:  true
        .col-md-6.pt-3
          .field
            = form.label :formed_at, :class => "control-label"
            = form.date_field :formed_at, class: 'form-control', required:  true
        .col-md-6.pt-3
          .field
            = form.label :verified, :class => "control-label"
            = form.radio_button :verified, :checked =>"false", class: 'form-control', required:  true
        .col-md-6.pt-3
          .field
            = form.label :verified_at, :class => "control-label"
            = form.date_field :verified_at, class: 'form-control'
        .col-md-6.pt-3
          .field
            = form.label :avatar_url, :class => "control-label"
            = form.file_field :avatar_url, class: 'form-control'
        .col-md-6.pt-3
          .field
            = form.label :cover_photo_url, :class => "control-label"
            = form.file_field :cover_photo_url, class: 'form-control'

    .form-group.col-12.pt-2.mb-0
      .form-row
        .col-md-6.pt-3
          .field
            = form.submit 'Save Changes', class: 'btn bg-colored'
